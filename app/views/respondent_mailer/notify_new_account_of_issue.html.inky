<% content_for :title do %>
  Code of Conduct Enforcement Issue on <%= @project_name %>
<% end %>

<container style="margin-top: 2em;">
  <row>
    <columns>
      <% @text.split(/\n/).each do |paragraph| %>
        <p><%= paragraph %></p>
      <% end %>
    </columns>
  </row>

  <row>
    <columns>
      <button href="<%= new_account_registration_url %>">Create an Account</button>
    </columns>
  </row>
</container>
