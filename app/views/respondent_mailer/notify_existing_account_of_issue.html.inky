<% content_for :title do %>
  Code of Conduct Enforcement Issue on <%= @project_name %>
<% end %>

<container style="margin-top: 2em;">
  <row>
    <columns>
      <p><%= @text.gsub(/\n\n/, "</p><p>") %></p>
    </columns>
  </row>

  <row>
    <columns>
      <button href="<%= issue_url(@issue) %>">View Issue on Beacon</button>
    </columns>
  </row>
</container>
