.card.mb-3.mr-3 id: "consequence-#{consequence.severity}-show", style: "width: 30rem" 
  .card-body
    h2.card-title
      | Level #{consequence.severity}: #{consequence.label}
    .card-text
      p= consequence.example
      h3 Consequence
      p= consequence.consequence
      - if @current_account_can_manage_ladder
        a onclick: "toggle_show_and_form_views('consequence-#{consequence.severity}')"  Edit
- if @current_account_can_manage_ladder
  .card.mb-3.mr-3 id: "consequence-#{consequence.severity}-form", style: "display: none; width: 30rem" 
    .card-body
      .card-text
        - if @project
          - url = project_issue_severity_level_path(@project, consequence)
        - else
          - url = project_issue_severity_level_path(@organization, consequence)
        = form_for consequence, url: url, style: "width: 100%" do |f|
          .form-group
            = f.label :label
            br/
            = f.text_field :label, autofocus: true, class: "form-control"
          .form-group
            = f.label :severity
            = f.select :severity, (1..10).to_a, class: "form-control"
          .form-group
            = f.label :description
            br/
            = f.text_area :example, rows: 5, class: "form-control"
          .form-group
            = f.label :consequence
            br/
            = f.text_area :consequence, rows: 5, class: "form-control"
          .actions
            = f.submit "Save", class: "btn btn-primary"
            - if consequence.can_be_safely_destroyed?
              = f.submit "Delete", class: "btn btn-danger"
            a.btn onclick: "toggle_show_and_form_views('consequence-#{consequence.severity}')"  Cancel
