- title "My Organizations"
h1.float-left.mr-3 My Organizations
.actions.ml-3.mb-3
  = link_to "New Organization", new_organization_path, class: "btn btn-primary"
.container
  .row
    - @organizations.each_with_index do |organization,i|
      .card.mb-3.mr-3 style: "width: 33%; min-height: 14rem" 
        .card-body
          h2.card-title
            = link_to organization.name, organization
          .card-text
            p= organization.description
            p
              span.badge.badge-pill.badge-warning= pluralize(organization.projects.size, "Project")
