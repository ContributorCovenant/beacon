<div class="row mt-3">

  <div class="col">

    <h2 class="mt-3">Description</h2>
    <div style="background-image: url('/watermark.svg'); background-repeat: no-repeat; background-position: left top;">
      <div style="mix-blend-mode: exclusion; padding: 1em;">
        <%= @issue.respondent_summary %>
      </div>
    </div>

    <h2 class="mt-3">Discussion with Moderators</h2>

    <% respondent_discussion_comments.each do |comment| %>
      <% card_bg = comment.commenter == issue.respondent ? "bg-warning" : "bg-success" %>
      <div class="card mb-3 mr-3 <%= card_bg %>" style="width: 100%">
        <div class="card-body">
          <h3 class="card-title">
            <% if comment.commenter == issue.respondent %>
              <% email = current_account.email %>
            <% else %>
              <% email = "Moderator" %>
            <% end %>
            <%= email %> on <%= comment.created_at.in_time_zone.strftime("%a %b %d %Y at %l:%M %p %Z") %>
          </h3>
          <div class="card-text">
            <p><%= comment.text %></p>
          </div>
        </div>
      </div>
    <% end %>

    <%= form_for comment, url: project_issue_issue_comments_path(project, issue) do |f| %>
      <div class="form-group">
        <%= f.label "Message to Moderators" %><br />
        <%= f.text_area :text, class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Send Message", class: "btn btn-primary" %>
      </div>
    <% end %>

  </div>

  <div class="col">
    <h2 class="mt-3">Status</h2>
    <p>
      <%= issue.aasm_state.titleize %> (<%= issue.updated_at.in_time_zone.strftime("%a %b %d %Y at %l:%M %p %Z") %>)
    </p>

    <% if @issue_severity_level %>
      <h2 class="mt-3">Issue Classification</h2>
      <%= render partial: "issue_severity_levels/consequence", locals: { consequence: @issue_severity_level } %>
    <% end %>
  </div>

</div>

